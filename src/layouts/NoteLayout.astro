---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';

type Props = CollectionEntry<'notes'>['data'];

const { title, date } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description="felix murray tang's notes" />
	</head>

	<body>
		<main>
			<article>
				{date && (
					<time style="margin: 0 0 -1.8em; padding: 0; color: #555; font-size: 0.9em; display: block;">
						{new Date(date).toLocaleDateString('en-US', {
							year: 'numeric',
							month: 'short',
							day: '2-digit'
						})}
					</time>
				)}
				<h1><a href="/notes/">{title}</a></h1>
				<slot />
			</article>
		</main>
	</body>
</html>
