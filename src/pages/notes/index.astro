---
import BaseHead from '../../components/BaseHead.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const notes = (await getCollection('notes'))
	.sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
	.filter(note => note.id.toLowerCase() !== 'readme.org');
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<article>
				<h1><a href="/">notes</a></h1>
				<p>Here are all my notes, including notes, blogs, and projects and others.</p>
				<ul>
					{
						notes.map((note) => (
							<li>
								<p>
									<a href={`/notes/${note.slug}/`}>
										<span class="date" style="color: gray; font-size: 0.8em;">
											{note.data.date.toLocaleDateString('en-US', {
												month: '2-digit',
												year: '2-digit',
											})}
										</span>
										<span class="title">
											{note.data.title}
										</span>
										<span class="tag" style="color: green;">
											{note.data.filetags?.map(tag => `${tag}`).join(',')}
										</span>
									</a>
								</p>
							</li>
						))
					}
				</ul>
			</article>
		</main>
	</body>
</html>

<style>
	ul {
		list-style: none;
		padding-left: 0;
	}
	p {
		line-height: 1.5;
	}
	p a {
		border-bottom: none;
	}
	p a:hover {
		border-bottom: 1px solid gray;
	}
</style>
